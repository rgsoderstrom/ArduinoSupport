<Window x:Class="WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication"
        mc:Ignorable="d"
        Title="MainWindow" Top="15" Left="15" Height="200" Width="500" Loaded="MainWindow_Loaded">
    <DockPanel>
        <StackPanel Margin="3" Orientation="Vertical" DockPanel.Dock="Left">
            <Button Click="LaunchSimButton_Click">Launch Sim</Button>
        </StackPanel>

        <Border Margin="3,3,3,3" BorderBrush="Black" BorderThickness="2">
            <TextBox Name="TextDisplay"  VerticalScrollBarVisibility="Visible"/>
        </Border>
    </DockPanel>
</Window>
        